<main class="mainframe">

    <section class="feedleft">
        <h2 class="class-title">Artists</h2>
        <div class="wrap">
            {{#each artists}}
            <article class="card">

                <h3 class="artist-name">{{this.name}}</h3>
                <p class="index-text">{{this.type}}</p>
                <p class="index-text1">
                    {{#each this.instruments}}
                    #{{this}}
                    {{/each}}
                    {{#each this.genre}}
                    #{{this}}
                    {{/each}}
                </p>
            </article>
            {{/each}}
        </div>
    </section>

    <section class="feedcenter">
        <h2 class="class-title">Reviews</h2>
        {{#each critiques}}
        {{#if this.concert}}
        <article class="card-center">
            <a href="critic/{{this.concert}}" text-decoration="none" class="hypertext">
                <h3 class="critic-text">{{this.title}}</h3>
            </a>
        </article>
        {{/if}}
        {{/each}}
    </section>

    <section class="feedright">
        <h2 class="class-title">Concerts</h2>
        {{#each concerts}}
        <article class="card">
            <div class="artist-name">{{this.nom}}</div>
            <p class="index-text">{{this.date_concert}} {{this.month_concert}}</p>
            <p class="index-text">{{this.price}}â‚¬</p>
        </article>
        {{/each}}
    </section>


</main>

