<section class="fauxbody">

    <form action="/admin/musicians/edit" method="post">
        <div class="encore-une-class-wrap-concert-add">

            {{!-- { instruments: [ 'Clarinette' ],
_id: 5d77b26371437725d78817b1,
profile_image: '',
name: 'Alexis Jarousky',
solist: true,
type: 'solo artist',
__v: 0 } --}}



            <div>
                <label for="name" class="denomination">Name of the artist</label>
                <input type="text" for="name" name="name" placeholder="name" value="{{this.name}}" class="inputtamere">
            </div>

            <div>
                <label for="place" class="denomination">Type</label>
                <input type="text" for="name" name="type" value="{{this.type}}" class="inputtamere">
            </div>

            <div>
                <label class="denomination">Profile image</label>
                <input type="file" name="profile_image" class="inputtamere2">
            </div>

            {{#each this.instruments}}
            <div>
                <label for="date" class="denomination" class="denomination">Current instrument</label>
                <input type="text" name="instruments" value="{{this}}" class="inputtamere">
            </div>
            {{/each}}
            <div>
                <label for="date" class="denomination">New Instrument</label>
                <input type="text" name="instruments" class="inputtamere">
            </div>


            <input style="display:none" type="text" name="id" value="{{this._id}}" class="inputtamere">

            <button value="send" class="encore-un-btn-add-concert">Confirm</button>
        </div>
    </form>
</section>